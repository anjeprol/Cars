<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#25636c" />
            <gradient android:angle="-90" android:startColor="#0685ab" android:endColor="#509fcc"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#03acd6" />
            <solid android:color="#22c7e4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#39909b" />
            <gradient android:angle="-90" android:startColor="#7dcdd6" android:endColor="#50adcc" />
        </shape>
    </item>
</selector>